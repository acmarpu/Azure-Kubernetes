sudo apt-get update
sudo apt-get install docker.io -y

sudo systemctl status docker

sudo usermod -aG docker ubuntu



Docker Files

FROM ubuntu:latest

# Set the working directory in the image
WORKDIR /app

# Copy the files from the host files system to the image fiels system
COPY . /app

# instal the necessary packages
RUN apt-get update && apt-get install -y python3 python3-

# Set env variables
ENV NAME World

# Run a Cpmmand to start the application
CMD ["python3", "app.py"]




